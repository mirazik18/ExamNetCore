                                @foreach (var player in ViewBag.Players)
                                {
                                    if (player.TeamId == team.Id)
                                    {
                                        <div class="player">
                                            <img class="playerImg" src="@player.AvatarUrl"  alt="" />
                                            <a href="~/Home/GetDetailPlayer/@player.Id"> @player.GameName</a>;
